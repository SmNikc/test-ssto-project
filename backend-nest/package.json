{
  "name": "backend-nest",
  "version": "1.0.0",
  "description": "Backend for SSTO test project",
  "main": "dist/main.js",
  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:prod": "node dist/main",
    "format": "prettier --write .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:unit": "jest --runInBand --testPathPattern=test/unit",
    "test:contract": "jest --runInBand --testPathPattern=test/contract",
    "db:probe:local": "node scripts/test-db.js"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/sequelize": "^10.0.0",
    "@nestjs/swagger": "^7.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "date-fns": "^3.0.0",
    "date-fns-tz": "^2.0.0",
    "dotenv": "^16.0.0",
    "express": "^4.18.0",
    "imap": "^0.8.19",
    "mailparser": "^3.6.0",
    "nodemailer": "^6.9.0",
    "pg": "^8.11.0",
    "pg-hstore": "^2.3.4",
    "pdfkit": "^0.14.0",
    "puppeteer": "^21.0.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0",
    "sequelize": "^6.35.0",
    "sequelize-typescript": "^2.1.0",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@testcontainers/postgresql": "^10.10.2",
    "@types/express": "^4.17.17",
    "@types/imap": "^0.8.40",
    "@types/jest": "^29.5.0",
    "@types/mailparser": "^3.4.0",
    "@types/node": "^20.5.0",
    "@types/nodemailer": "^6.4.0",
    "@types/pdfkit": "^0.13.0",
    "@types/sequelize": "^4.28.0",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^8.5.0",
    "@typescript-eslint/parser": "^8.5.0",
    "eslint": "^9.9.0",
    "jest": "^29.7.0",
    "pg-embed": "^1.3.0",
    "prettier": "^3.3.3",
    "supertest": "^7.1.4",
    "ts-jest": "^29.2.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.5.0"
  },
  "engines": {
    "node": ">=18.18.0"
  },
  "jest": {
    "moduleFileExtensions": ["js", "json", "ts"],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.(t|j)s",
      "!src/**/*.spec.ts",
      "!src/**/*.interface.ts",
      "!src/main.ts"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/src/$1"
    }
  }
}
