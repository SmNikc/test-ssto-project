# ================== BACKEND (NestJS) DOCKER ENV ==================

# База данных (PostgreSQL в Docker контейнере)
DB_HOST=postgres
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=ssto

# Database URL для Docker (приоритетный способ подключения)
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/ssto

# Сервер backend
NODE_ENV=production
PORT=3001
CORS_ORIGIN=http://localhost,http://localhost:80

# ================== УПРОЩЕННЫЙ РЕЖИМ (ВРЕМЕННО) ==================
# Упрощенная авторизация без Keycloak - только по логину, без пароля
SIMPLE_AUTH_MODE=true
JWT_SECRET=ssto-dev-secret
KEYCLOAK_ENABLED=false

# DEV-авторизация (для совместимости)
DEV_JWT_SECRET=ssto-dev-secret
DEV_TOKEN_TTL=1h

