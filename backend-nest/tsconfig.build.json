{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": false,
    "removeComments": true,
    "sourceMap": true,
    "outDir": "./dist"
  },
  "exclude": [
    "node_modules",
    "**/node_modules/**",
    "dist",
    "test",
    "**/*.spec.ts",
    "**/*.test.ts",
    "jest.config.ts",
    "**/jest.config.ts",
    "frontend-static/**",
    "**/frontend-static/**"
  ]
}
