{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": false,
    "removeComments": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "Node16"
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "**/node_modules/**",
    "dist",
    "test",
    "**/*.spec.ts",
    "**/*.test.ts",
    "jest.config.ts",
    "**/jest.config.ts",
    "frontend-static/**",
    "**/frontend-static/**"
  ]
}