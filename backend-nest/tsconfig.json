{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "rootDir": "./src"
  },
  "exclude": [
    "node_modules",
    "**/node_modules/**",
    "dist",
    "test",
    "**/*.spec.ts",
    "**/*.test.ts",
    "jest.config.ts",
    "**/jest.config.ts",
    "frontend-static/**",
    "**/frontend-static/**"
  ]
}
